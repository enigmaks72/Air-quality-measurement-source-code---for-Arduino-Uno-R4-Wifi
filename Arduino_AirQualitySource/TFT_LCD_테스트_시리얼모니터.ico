#include <Adafruit_GFX.h>
#include <Adafruit_ILI9341.h>

// 핀 설정
#define TFT_CS    10
#define TFT_RST   9
#define TFT_DC    8

// ILI9341 객체 생성
Adafruit_ILI9341 tft = Adafruit_ILI9341(TFT_CS, TFT_DC, TFT_RST);

void setup() {
  Serial.begin(9600);
  Serial.println("TFT LCD test 시작");

  // TFT 초기화
  Serial.println("TFT 초기화 중...");
  tft.begin();
  Serial.println("TFT 초기화 성공");

  // 배경색 설정
  tft.fillScreen(ILI9341_BLACK);
  Serial.println("배경색 설정 완료");

  // 텍스트 설정
  tft.setTextColor(ILI9341_WHITE);
  tft.setTextSize(2);
  tft.setCursor(10, 10);
  tft.println("Hello World");
  Serial.println("텍스트 출력 완료");

  // 도형 그리기
  tft.drawLine(0, 0, tft.width(), tft.height(), ILI9341_RED);
  tft.drawRect(10, 10, 100, 50, ILI9341_GREEN);
  tft.fillCircle(tft.width()/2, tft.height()/2, 20, ILI9341_BLUE);
  Serial.println("도형 그리기 완료");
}

void loop() {
  // 루프가 필요 없다면 비워둡니다.
}
